@import './index.styl'
.play
    position relative
    width 100%
    height 100%
    .back
        color #fff
        font-size 16px
        padding-left .1rem
        vertical-align middle
    .audio
        display block
        margin 0 auto
    // 歌词框
    .lrc-box
        overflow hidden
        margin-top .1rem
        height 2.2rem
        overflow-y scroll
    .lrc-list
        transition all 1s
        text-align center
        color #999  
        transition all easy 1s
        li
            font-size .15rem
            font-style 'kaiti'
            transition all 1s
        .line-high 
            color #fff
            font-size .18rem
    .logo
        color #fff
        padding .2rem 0 0 .1rem
    .bg
        position fixed
        top 0
        overflow hidden
        z-index -2
        width 100%
        height 100%
        background-size 200% 
        background-position 50% 0
        background-color #333
        filter blur(.06rem)
        &::before
            display block
            content ''
            z-index -1
            width 100%
            height 100%
            background rgba(0,0,0,0.6)
    .music-name
        text-overflow ellipsis
        overflow hidden
        white-space nowrap
        text-align center
        font-size 0.18rem
        color #e0e0e0
    .trigger
        overflow hidden
        position absolute
        top 0%
        left 46%
        z-index 3
        display block
        width 1.1rem
        height 1.6rem
        background-image url('../imgs/needle-ip6.png')
        background-repeat no-repeat
        background-size contain
        -moz-transform-origin 5% 0
        -webkit-transform-origin 5% 0
        -o-transform-origin 5% 0
        transform rotate(-20deg)
        transition transform 1s
.play-control
    margin .55rem 0 .13rem 0 
    position relative
    overflow hidden
    .record
        position relative
        width 3rem
        height 3rem
        margin 0 auto
        &::before
            position absolute
            z-index 2
            content ''
            display block
            width 100%
            height 100%
            background-image url('../imgs/disc-ip6.png')
            background-size contain
        .song-pic
            position absolute
            z-index 1
            top 50%
            left 50%
            width 1.9rem
            height 1.9rem
            margin -.95rem 0 0 -.95rem
            img 
                width 100%
    .play-btn
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%)
        // margin -.23rem 0 0 -.25rem
        z-index 4
        display inline-block
        // width .5rem
        // height .46rem
        font-size 60px
        color #fff

// 整体旋转
@keyframes changeright     
    0%{
        -webkit-transform rotate(0deg)
        -o-transform rotate(0deg)
        -moz-transform rotate(0deg)
    }
    50%{
        -webkit-transform rotate(180deg)
        -o-transform rotate(180deg)
        -moz-transform rotate(180deg)
    }
    100%{
        -webkit-transform rotate(360deg)
        -o-transform rotate(360deg)
        -moz-transform rotate(360deg)
    }

.record.rotate 
    -webkit-animation changeright 16s linear infinite
    -o-animation changeright 16s linear infinite
    -moz-animation changeright 16s linear infinite  
// 暂停
.record.rotate-pause
    animation-play-state paused
    -webkit-animation-play-state paused
    -o-animation-play-state paused
    -moz-animation-play-state paused
    
.trigger.rotate_tr
    -moz-transform-origin 5% left
    -webkit-transform-origin 5% left
    -o-transform-origin 5% left
    transform rotate(0deg)
